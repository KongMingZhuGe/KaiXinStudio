<script>
function toggleEmail() {
    var emailDiv = document.getElementById("emailContent");
    if (emailDiv.classList.contains('hidden')) {
        emailDiv.classList.remove('hidden');
    } else {
        emailDiv.classList.add('hidden');
    }
}
</script>

